@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}


<div class="page-header d-print-none mb-3">
    <div class="row align-items-center">
        <div class="col">
            <div class="page-pretitle">
                Sistema
            </div>
            <h2 class="page-title">
                Ha ocurrido un error
            </h2>
        </div>
    </div>
</div>

<div class="card border-danger">
    <div class="card-body d-flex">
        <div class="me-3">
            <span class="avatar avatar-lg bg-danger-lt">
                <i class="ti ti-alert-triangle"></i>
            </span>
        </div>
        <div>
            <h3 class="card-title mb-2 text-danger">Algo salió mal</h3>
            <p class="mb-1">
                Se produjo un error al procesar tu solicitud. Intenta de nuevo en unos momentos.
            </p>

            @if (Model.ShowRequestId)
            {
                <p class="text-muted small mb-2">
                    <strong>ID de solicitud:</strong> <code>@Model.RequestId</code>
                </p>
            }

            <p class="text-muted small mb-3">
                Si el problema persiste, contacta al administrador del sistema e incluye el ID de solicitud.
            </p>

            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                <i class="ti ti-arrow-left me-1"></i>
                Volver al inicio
            </a>
        </div>
    </div>
</div>
