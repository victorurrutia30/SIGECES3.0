@using System.Security.Claims

<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - SIGECES</title>

    <!-- Tabler core CSS (incluye Bootstrap 5) -->
    <link rel="stylesheet" href="https://unpkg.com/@@tabler/core@latest/dist/css/tabler.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/@@tabler/core@latest/dist/css/tabler-flags.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/@@tabler/core@latest/dist/css/tabler-payments.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/@@tabler/core@latest/dist/css/tabler-vendors.min.css" />

    <!-- Iconos Tabler como webfont -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@tabler/icons-webfont@latest/tabler-icons.min.css" />

    <!-- DataTables CSS -->
    <link rel="stylesheet"
          href="https://cdn.datatables.net/1.13.8/css/jquery.dataTables.min.css" />


    <!-- Estilos propios del sitio -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SIGECES.styles.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    @{
        var isAuthenticated = User?.Identity?.IsAuthenticated == true;
        var userName = isAuthenticated ? (User.FindFirst(ClaimTypes.Name)?.Value ?? User.Identity!.Name) : null;
        var userRole = isAuthenticated ? User.FindFirst(ClaimTypes.Role)?.Value : null;
    }
    <div class="page">
        <!-- Sidebar vertical principal -->
        <aside class="navbar navbar-vertical navbar-expand-md navbar-dark">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar-menu"
                        aria-controls="sidebar-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <h1 class="navbar-brand navbar-brand-autodark">
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        SIGECES
                    </a>
                </h1>

                <!-- Zona compacta (mobile) -->
                <div class="navbar-nav flex-row d-md-none">
                    @if (isAuthenticated && !string.IsNullOrEmpty(userRole))
                    {
                        <span class="nav-link px-2">
                            <span class="badge bg-primary-lt">@userRole</span>
                        </span>
                    }
                    @if (!isAuthenticated)
                    {
                        <a class="nav-link px-2" asp-area="" asp-controller="Account" asp-action="Login">
                            <i class="ti ti-login"></i>
                        </a>
                    }
                </div>

                <div class="collapse navbar-collapse" id="sidebar-menu">
                    <ul class="navbar-nav pt-lg-3">
                        <!-- Inicio: visible para todos -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="nav-link-icon d-md-none d-lg-inline-block">
                                    <i class="ti ti-home"></i>
                                </span>
                                <span class="nav-link-title">Inicio</span>
                            </a>
                        </li>

                        @* Menú según rol *@
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Courses" asp-action="Index">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <i class="ti ti-notes"></i>
                                    </span>
                                    <span class="nav-link-title">Cursos</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="CourseCategories" asp-action="Index">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <i class="ti ti-category"></i>
                                    </span>
                                    <span class="nav-link-title">Categorías</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <i class="ti ti-users"></i>
                                    </span>
                                    <span class="nav-link-title">Usuarios</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="AdminReports" asp-action="Index">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <i class="ti ti-report-analytics"></i>
                                    </span>
                                    <span class="nav-link-title">Reportes</span>
                                </a>
                            </li>
                        }
                        else if (User.IsInRole("Instructor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Courses" asp-action="Index">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <i class="ti ti-notes"></i>
                                    </span>
                                    <span class="nav-link-title">Mis cursos</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="InstructorReports" asp-action="Index">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <i class="ti ti-report-analytics"></i>
                                    </span>
                                    <span class="nav-link-title">Reportes</span>
                                </a>
                            </li>
                        }
                        else if (User.IsInRole("Student"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="StudentCourses" asp-action="Index">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <i class="ti ti-book"></i>
                                    </span>
                                    <span class="nav-link-title">Catálogo</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="StudentCourses" asp-action="MyCourses">
                                    <span class="nav-link-icon d-md-none d-lg-inline-block">
                                        <i class="ti ti-bookmark"></i>
                                    </span>
                                    <span class="nav-link-title">Mis cursos</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </aside>

        <!-- Contenido principal -->
        <div class="page-wrapper">
            <!-- Barra superior (información de usuario) -->
            <header class="navbar navbar-expand-md d-none d-md-flex d-print-none">
                <div class="container-xl">
                    <div class="navbar-nav flex-row order-md-last">
                        @if (isAuthenticated)
                        {
                            <div class="nav-item dropdown d-none d-md-flex">
                                <a href="#" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown"
                                   aria-label="Open user menu">
                                    <span class="avatar avatar-sm">
                                        <i class="ti ti-user"></i>
                                    </span>
                                    <div class="d-none d-xl-block ps-2">
                                        <div>@userName</div>
                                        
                                    </div>
                                </a>
                                <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="px-3">
                                        <button type="submit" class="btn btn-outline-danger w-100">
                                            Cerrar sesión
                                        </button>
                                    </form>
                                </div>
                            </div>
                        }
                        else
                        {
                            <a class="btn btn-outline-primary" asp-area="" asp-controller="Account" asp-action="Login">
                                Iniciar sesión
                            </a>
                        }
                    </div>
                </div>
            </header>

            <!-- Cuerpo de página -->
            <div class="page-body">
                <div class="container-xl">
                    @* Sección opcional para headers de página específicos *@
                    @RenderSection("PageHeader", required: false)

                    @RenderBody()
                </div>
            </div>

            <footer class="footer footer-transparent d-print-none">
                <div class="container-xl">
                    <div class="row align-items-center py-3">
                        <!-- Columna izquierda: info SIGECES / UTEC -->
                        <div class="col-12 col-md-7 text-center text-md-start mb-2 mb-md-0">
                            <div class="footer-brand">
                                <strong>SIGECES</strong> · Sistema de gestión de cursos extracurriculares
                            </div>
                            <div class="footer-copy small">
                                &copy; @DateTime.Now.Year Universidad Tecnológica de El Salvador · UTEC
                            </div>
                            <div class="footer-copy small">
                                Campus: 1ª calle poniente, edificio "Los Fundadores" No. 1138, San Salvador ·
                                Tel: 2275-8888
                            </div>
                        </div>

                        <!-- Columna derecha: redes sociales -->
                        <div class="col-12 col-md-5 text-center text-md-end">
                            <div class="footer-social-label small mb-1">
                                Síguenos en redes
                            </div>
                            <div class="footer-social">
                                @* Reemplaza los href con las URLs oficiales que quieras usar *@
                                <a href="#" target="_blank" rel="noopener noreferrer" class="footer-social-link" title="Facebook UTEC">
                                    <i class="ti ti-brand-facebook"></i>
                                </a>
                                <a href="#" target="_blank" rel="noopener noreferrer" class="footer-social-link" title="Instagram UTEC">
                                    <i class="ti ti-brand-instagram"></i>
                                </a>
                                <a href="#" target="_blank" rel="noopener noreferrer" class="footer-social-link" title="YouTube UTEC">
                                    <i class="ti ti-brand-youtube"></i>
                                </a>
                                <a href="#" target="_blank" rel="noopener noreferrer" class="footer-social-link" title="X (Twitter) UTEC">
                                    <i class="ti ti-brand-x"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>

        </div>
    </div>

    <!-- jQuery global (para validación, DataTables, etc.) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" crossorigin="anonymous"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>

    <!-- ApexCharts global (para dashboards) -->
    <script src="https://cdn.jsdelivr.net/npm/apexcharts@latest"></script>

    <!-- JS core de Tabler -->
    <script src="https://unpkg.com/@@tabler/core@latest/dist/js/tabler.min.js" defer></script>

    <!-- Scripts propios -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Configuración global de DataTables -->
    <script src="~/js/datatable-defaults.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await Html.PartialAsync("_Alerts")

</body>
</html>
