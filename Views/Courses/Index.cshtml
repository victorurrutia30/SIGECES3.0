@model IEnumerable<SIGECES.Models.Course>

@{
    ViewData["Title"] = "Cursos";
    var search = Context.Request.Query["q"].ToString();
    var onlyActive = Context.Request.Query["onlyActive"].ToString() == "true";

    // Listas distintas para filtros cliente (DataTables)
    var courses = Model ?? Enumerable.Empty<SIGECES.Models.Course>();

    var categoryNames = courses
        .Where(c => c.Category != null)
        .Select(c => c.Category!.Name)
        .Distinct()
        .OrderBy(n => n)
        .ToList();

    var instructorNames = courses
        .Where(c => c.Instructor != null)
        .Select(c => c.Instructor!.FullName)
        .Distinct()
        .OrderBy(n => n)
        .ToList();
}


<div class="page-header d-print-none mb-3">
    <div class="row align-items-center">
        <div class="col">
            <div class="page-pretitle">
                Catálogos
            </div>
            <h2 class="page-title">
                Cursos
            </h2>
        </div>
        <div class="col-auto ms-auto d-print-none">
            <a asp-action="Create" class="btn btn-primary">
                <i class="ti ti-notes-plus me-1"></i>
                Crear curso
            </a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <form method="get" class="row g-2 w-100">
            <div class="col-md-4">
                <div class="input-icon">
                    <span class="input-icon-addon">
                        <i class="ti ti-search"></i>
                    </span>
                    <input type="text"
                           name="q"
                           value="@search"
                           class="form-control"
                           placeholder="Buscar por título o instructor..." />
                </div>
            </div>
            <div class="col-md-3">
                <label class="form-check mb-0 mt-1">
                    <input type="checkbox"
                           name="onlyActive"
                           value="true"
                           class="form-check-input"
                           @(onlyActive ? "checked" : "") />
                    <span class="form-check-label">
                        Solo cursos activos
                    </span>
                </label>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-secondary w-100">
                    <i class="ti ti-filter me-1"></i>
                    Filtrar
                </button>
            </div>
        </form>
    </div>

    <!-- Filtros avanzados (cliente, usando DataTables) -->
    <div class="px-3 pt-3">
        <div class="row g-2 align-items-end">
            <div class="col-md-4">
                <label for="courses-title-filter" class="form-label small mb-1">
                    Filtrar por título (cliente)
                </label>
                <input type="text"
                       id="courses-title-filter"
                       class="form-control form-control-sm"
                       placeholder="Escribe parte del título del curso..." />
            </div>

            <div class="col-md-3">
                <label for="courses-category-filter" class="form-label small mb-1">
                    Categoría
                </label>
                <select id="courses-category-filter"
                        class="form-select form-select-sm">
                    <option value="">Todas</option>
                    @foreach (var name in categoryNames)
                    {
                        <option value="@name">@name</option>
                    }
                </select>
            </div>

            <div class="col-md-3">
                <label for="courses-instructor-filter" class="form-label small mb-1">
                    Instructor
                </label>
                <select id="courses-instructor-filter"
                        class="form-select form-select-sm">
                    <option value="">Todos</option>
                    @foreach (var name in instructorNames)
                    {
                        <option value="@name">@name</option>
                    }
                </select>
            </div>

            <div class="col-md-2">
                <label for="courses-status-filter" class="form-label small mb-1">
                    Estado
                </label>
                <select id="courses-status-filter"
                        class="form-select form-select-sm">
                    <option value="">Todos</option>
                    <option value="Activo">Activos</option>
                    <option value="Inactivo">Inactivos</option>
                </select>
            </div>
        </div>
    </div>


    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table card-table table-vcenter table-striped table-hover mb-0 js-datatable-courses">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Categoría</th>
                        <th>Instructor</th>
                        <th class="text-center">Estado</th>
                        <th class="w-1"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                No se encontraron cursos.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td class="text-muted">@item.Category?.Name</td>
                                <td>@item.Instructor?.FullName</td>
                                <td class="text-center">
                                    @if (item.IsActive)
                                    {
                                        <span class="badge bg-success-lt">
                                            <i class="ti ti-circle-check me-1"></i>
                                            Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary-lt">
                                            <i class="ti ti-circle-dashed me-1"></i>
                                            Inactivo
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-list flex-nowrap">
                                        <a asp-action="Edit"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="ti ti-pencil me-1"></i>
                                            Editar
                                        </a>
                                        <a asp-controller="Lessons"
                                           asp-action="Manage"
                                           asp-route-courseId="@item.Id"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="ti ti-list-details me-1"></i>
                                            Lecciones
                                        </a>
                                        <a asp-action="Students"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-secondary">
                                            <i class="ti ti-users me-1"></i>
                                            Estudiantes
                                        </a>
                                        <a asp-action="Delete"
                                           asp-route-id="@item.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="ti ti-trash me-1"></i>
                                            Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            // Inicializar DataTable usando configuración global
            // y ocultar la barra de búsqueda nativa de DataTables (sin 'f' en el dom)
            var table = $('.js-datatable-courses').DataTable({
                dom:
                    "<'row'<'col-sm-12 col-md-6'l><'col-sm-12 col-md-6'>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",

                // Deshabilitar orden / búsqueda en la última columna (acciones)
                columnDefs: [
                    { orderable: false, searchable: false, targets: -1 }
                ]
            });

            // Filtro por título (columna 0)
            $('#courses-title-filter').on('keyup change', function () {
                table
                    .column(0)
                    .search(this.value)
                    .draw();
            });

            // Filtro por categoría (columna 1)
            $('#courses-category-filter').on('change', function () {
                var value = this.value || '';
                table
                    .column(1)
                    .search(value)
                    .draw();
            });

            // Filtro por instructor (columna 2)
            $('#courses-instructor-filter').on('change', function () {
                var value = this.value || '';
                table
                    .column(2)
                    .search(value)
                    .draw();
            });

            // Filtro por estado (columna 3: "Activo"/"Inactivo")
            $('#courses-status-filter').on('change', function () {
                var value = this.value || '';
                table
                    .column(3)
                    .search(value)
                    .draw();
            });
        });
    </script>
}


