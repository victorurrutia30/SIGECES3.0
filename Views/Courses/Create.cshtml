@model SIGECES.Models.Course

@{
    ViewData["Title"] = "Crear curso";
}

<div class="page-header d-print-none mb-3">
    <div class="row align-items-center">
        <div class="col">
            <div class="page-pretitle">
                Cursos
            </div>
            <h2 class="page-title">
                Crear curso
            </h2>
        </div>
        <div class="col-auto ms-auto d-print-none">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="ti ti-arrow-left me-1"></i>
                Volver a cursos
            </a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post" class="js-course-create-form">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Categoría</label>
                <select asp-for="CategoryId"
                        asp-items="ViewBag.CategoryId"
                        class="form-select"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            @if (User.IsInRole("Admin"))
            {
                <div class="mb-3">
                    <label class="form-label">Instructor</label>
                    <select asp-for="InstructorId"
                            asp-items="ViewBag.InstructorId"
                            class="form-select"></select>
                    <span asp-validation-for="InstructorId" class="text-danger"></span>
                </div>
            }
            else
            {
                <input type="hidden" asp-for="InstructorId" />
            }

            <div class="form-check mb-3">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label"></label>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="ti ti-device-floppy me-1"></i>
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(function () {
            var $form = $('.js-course-create-form');

            if ($form.length === 0) {
                return;
            }

            $form.on('submit', function (e) {
                var form = this;

                // Evitar loop infinito cuando forzamos form.submit()
                if (form.dataset.swalSubmitted === 'true') {
                    form.dataset.swalSubmitted = 'false';
                    return;
                }

                var $f = $(form);

                // Si no está el plugin de validación, seguimos normal
                if ($f.valid && !$f.valid()) {
                    // Hay errores de validación → se muestran los mensajes en los <span asp-validation-for="">
                    return;
                }

                e.preventDefault();

                var title = $('#Title').val() || 'este curso';

                // Fallback si no está SweetAlert2
                if (typeof Swal === 'undefined') {
                    var ok = confirm('¿Crear el curso "' + title + '"?');
                    if (ok) {
                        form.dataset.swalSubmitted = 'true';
                        form.submit();
                    }
                    return;
                }

                Swal.fire({
                    title: '¿Crear este curso?',
                    text: 'Se creará el curso "' + title + '".',
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonText: 'Sí, crear',
                    cancelButtonText: 'Cancelar',
                    reverseButtons: true
                }).then(function (result) {
                    if (result.isConfirmed) {
                        form.dataset.swalSubmitted = 'true';
                        form.submit();
                    }
                });
            });
        });
    </script>
}

