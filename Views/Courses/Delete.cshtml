@model SIGECES.Models.Course

@{
    ViewData["Title"] = "Eliminar curso";
}

<h2>@ViewData["Title"]</h2>

<h3>¿Seguro que deseas eliminar este curso?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Categoría</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        <dt class="col-sm-2">Instructor</dt>
        <dd class="col-sm-10">@Model.Instructor?.FullName</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
