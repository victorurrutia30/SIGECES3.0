@model IEnumerable<SIGECES.Models.User>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="page-header d-print-none mb-3">
    <div class="row align-items-center">
        <div class="col">
            <div class="page-pretitle">
                Administración
            </div>
            <h2 class="page-title">
                Usuarios
            </h2>
        </div>
        <div class="col-auto ms-auto d-print-none">
            <a asp-action="Create" class="btn btn-primary">
                <i class="ti ti-user-plus me-1"></i>
                Nuevo usuario
            </a>
        </div>
    </div>
</div>

<div class="card">

    <!-- Filtros cliente (DataTables) -->
    <div class="px-3 pt-3">
        <div class="row g-2 align-items-end">
            <div class="col-md-5">
                <label for="users-text-filter" class="form-label small mb-1">
                    Filtrar por nombre / correo
                </label>
                <input type="text"
                       id="users-text-filter"
                       class="form-control form-control-sm"
                       placeholder="Escribe parte del nombre o correo..." />
            </div>

            <div class="col-md-3">
                <label for="users-status-filter" class="form-label small mb-1">
                    Estado
                </label>
                <select id="users-status-filter"
                        class="form-select form-select-sm">
                    <option value="">Todos</option>
                    <option value="Activo">Activos</option>
                    <option value="Inactivo">Inactivos</option>
                </select>
            </div>
        </div>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table card-table table-vcenter table-striped table-hover mb-0 js-datatable-users">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Rol</th>
                        <th class="text-center">Estado</th>
                        <th class="w-1"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                No se encontraron usuarios.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FullName</td>
                                <td class="text-muted">@user.Email</td>
                                <td>@user.Role.GetDisplayName()</td>
                                <td class="text-center">
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success-lt">
                                            <i class="ti ti-circle-check me-1"></i>
                                            Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary-lt">
                                            <i class="ti ti-circle-dashed me-1"></i>
                                            Inactivo
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-list flex-nowrap">
                                        <a asp-action="Edit"
                                           asp-route-id="@user.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="ti ti-pencil me-1"></i>
                                            Editar
                                        </a>
                                        @if (user.IsActive)
                                        {
                                            <a asp-action="Delete"
                                               asp-route-id="@user.Id"
                                               class="btn btn-sm btn-outline-danger">
                                                <i class="ti ti-user-off me-1"></i>
                                                Desactivar
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            var table = $('.js-datatable-users').DataTable({
                dom:
                    "<'row'<'col-sm-12 col-md-6'l><'col-sm-12 col-md-6'>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
                columnDefs: [
                    { orderable: false, searchable: false, targets: -1 } // acciones
                ]
            });

            // Filtro global nombre+correo
            $('#users-text-filter').on('keyup change', function () {
                var value = this.value || '';
                table.search(value).draw();
            });

            // Filtro por estado (columna 3: "Activo"/"Inactivo")
            $('#users-status-filter').on('change', function () {
                var value = this.value || '';
                table
                    .column(3)
                    .search(value)
                    .draw();
            });
        });
    </script>
}
