@model SIGECES.Models.User

@{
    ViewData["Title"] = "Desactivar usuario";
}

<h2>Desactivar usuario</h2>

<p>¿Seguro que deseas desactivar este usuario? No se eliminará físicamente, solo se marcará como inactivo.</p>

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.FullName</dd>

    <dt class="col-sm-2">Correo</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Rol</dt>
    <dd class="col-sm-10">@Model.Role</dd>
</dl>

<form asp-action="Delete" method="post"
      data-confirm="¿Seguro que deseas desactivar este usuario? Podrá volver a activarse más adelante.">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Desactivar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
