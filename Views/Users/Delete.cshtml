@model SIGECES.Models.User

@{
    ViewData["Title"] = "Desactivar usuario";
}

<div class="page-header d-print-none mb-3">
    <div class="row align-items-center">
        <div class="col">
            <div class="page-pretitle">
                Usuarios
            </div>
            <h2 class="page-title">
                Desactivar usuario
            </h2>
        </div>
        <div class="col-auto ms-auto d-print-none">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="ti ti-arrow-left me-1"></i>
                Volver a la lista
            </a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <p class="text-muted">
            ¿Seguro que deseas desactivar este usuario? No se eliminará físicamente, solo se marcará como inactivo.
        </p>

        <dl class="row mb-4">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Correo</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Rol</dt>
            <dd class="col-sm-9">@Model.Role</dd>
        </dl>

        <form asp-action="Delete" method="post"
              data-confirm="¿Seguro que deseas desactivar este usuario? Podrá volver a activarse más adelante.">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Cancelar
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="ti ti-user-off me-1"></i>
                    Desactivar
                </button>
            </div>
        </form>
    </div>
</div>
