@model SIGECES.Models.CourseCategory

@{
    ViewData["Title"] = "Desactivar categoría";
}

<div class="page-header d-print-none mb-3">
    <div class="row align-items-center">
        <div class="col">
            <div class="page-pretitle">
                Categorías
            </div>
            <h2 class="page-title">
                Desactivar categoría
            </h2>
        </div>
        <div class="col-auto ms-auto d-print-none">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="ti ti-arrow-left me-1"></i>
                Volver a categorías
            </a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <p class="text-muted">
            ¿Seguro que deseas desactivar esta categoría? Los cursos seguirán existiendo, pero la categoría se marcará como inactiva.
        </p>

        <dl class="row mb-4">
            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Descripción</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Cursos asociados</dt>
            <dd class="col-sm-9">@((Model.Courses?.Count()) ?? 0)</dd>
        </dl>

        <form asp-action="Delete" method="post"
              data-confirm="¿Seguro que deseas desactivar esta categoría? Los cursos seguirán existiendo.">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Cancelar
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="ti ti-square-minus me-1"></i>
                    Desactivar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            var $form = $('form[data-confirm]');
            if ($form.length === 0) return;

            $form.on('submit', function (e) {
                var form = this;

                if (form.dataset.swalSubmitted === 'true') {
                    form.dataset.swalSubmitted = 'false';
                    return;
                }

                var message = $(form).data('confirm') ||
                    '¿Seguro que deseas realizar esta acción?';

                e.preventDefault();

                if (typeof Swal === 'undefined') {
                    var ok = confirm(message);
                    if (ok) {
                        form.dataset.swalSubmitted = 'true';
                        form.submit();
                    }
                    return;
                }

                Swal.fire({
                    title: 'Confirmar acción',
                    text: message,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Sí, continuar',
                    cancelButtonText: 'Cancelar',
                    reverseButtons: true
                }).then(function (result) {
                    if (result.isConfirmed) {
                        form.dataset.swalSubmitted = 'true';
                        form.submit();
                    }
                });
            });
        });
    </script>
}
