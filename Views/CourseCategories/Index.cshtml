@model IEnumerable<SIGECES.Models.CourseCategory>

@{
    ViewData["Title"] = "Categorías de cursos";
}

<h2>Categorías de cursos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nueva categoría</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Activo</th>
            <th>Cursos asociados</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>@cat.Name</td>
                <td>@cat.Description</td>
                <td>@(cat.IsActive ? "Sí" : "No")</td>
                <td>@(cat.Courses?.Count() ?? 0)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                    @if (cat.IsActive)
                    {
                        <a asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-sm btn-outline-danger">Desactivar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
