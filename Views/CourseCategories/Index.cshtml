@model IEnumerable<SIGECES.Models.CourseCategory>

@{
    ViewData["Title"] = "Categorías de cursos";
}

<div class="page-header d-print-none mb-3">
    <div class="row align-items-center">
        <div class="col">
            <div class="page-pretitle">
                Catálogos
            </div>
            <h2 class="page-title">
                Categorías de cursos
            </h2>
        </div>
        <div class="col-auto ms-auto d-print-none">
            <a asp-action="Create" class="btn btn-primary">
                <i class="ti ti-category-plus me-1"></i>
                Nueva categoría
            </a>
        </div>
    </div>
</div>

<div class="card">

    <!-- Filtros cliente (DataTables) -->
    <div class="px-3 pt-3">
        <div class="row g-2 align-items-end">
            <div class="col-md-5">
                <label for="categories-text-filter" class="form-label small mb-1">
                    Filtrar por nombre / descripción
                </label>
                <input type="text"
                       id="categories-text-filter"
                       class="form-control form-control-sm"
                       placeholder="Escribe parte del nombre o descripción..." />
            </div>

            <div class="col-md-3">
                <label for="categories-status-filter" class="form-label small mb-1">
                    Estado
                </label>
                <select id="categories-status-filter"
                        class="form-select form-select-sm">
                    <option value="">Todas</option>
                    <option value="Activa">Activas</option>
                    <option value="Inactiva">Inactivas</option>
                </select>
            </div>
        </div>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table card-table table-vcenter table-striped table-hover mb-0 js-datatable-coursecategories">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th class="text-center">Estado</th>
                        <th class="text-center">Cursos asociados</th>
                        <th class="w-1"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-4">
                                No se encontraron categorías.
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var cat in Model)
                        {
                            <tr>
                                <td>@cat.Name</td>
                                <td class="text-muted">@cat.Description</td>
                                <td class="text-center">
                                    @if (cat.IsActive)
                                    {
                                        <span class="badge bg-success-lt">
                                            <i class="ti ti-circle-check me-1"></i>
                                            Activa
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary-lt">
                                            <i class="ti ti-circle-dashed me-1"></i>
                                            Inactiva
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    @(cat.Courses?.Count() ?? 0)
                                </td>
                                <td class="text-end">
                                    <div class="btn-list flex-nowrap">
                                        <a asp-action="Edit"
                                           asp-route-id="@cat.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="ti ti-pencil me-1"></i>
                                            Editar
                                        </a>
                                        @if (cat.IsActive)
                                        {
                                            <a asp-action="Delete"
                                               asp-route-id="@cat.Id"
                                               class="btn btn-sm btn-outline-danger">
                                                <i class="ti ti-square-minus me-1"></i>
                                                Desactivar
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            // DataTable sin buscador nativo (usamos filtros externos)
            var table = $('.js-datatable-coursecategories').DataTable({
                dom:
                    "<'row'<'col-sm-12 col-md-6'l><'col-sm-12 col-md-6'>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
                columnDefs: [
                    { orderable: false, searchable: false, targets: -1 } // acciones
                ]
            });

            // Filtro global por nombre+descripción
            $('#categories-text-filter').on('keyup change', function () {
                var value = this.value || '';
                table.search(value).draw();
            });

            // Filtro por estado (columna 2 -> badge "Activa"/"Inactiva")
            $('#categories-status-filter').on('change', function () {
                var value = this.value || '';
                table
                    .column(2)
                    .search(value)
                    .draw();
            });
        });
    </script>
}
