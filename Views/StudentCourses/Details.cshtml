@model SIGECES.Models.Course

@{
    ViewData["Title"] = "Detalle del curso";

    bool isEnrolled = ViewBag.IsEnrolled ?? false;
    SIGECES.Models.EnrollmentStatus? status = ViewBag.EnrollmentStatus;

    var completedLessonIds = ViewBag.CompletedLessonIds as List<int> ?? new List<int>();

    int total = Model.Lessons?.Count ?? 0;
    int completed = completedLessonIds.Count;
    int percent = total == 0 ? 0 : (completed * 100 / total);

    string statusText = "No inscrito";
    string badgeClass = "bg-secondary-lt";

    if (isEnrolled)
    {
        if (status == SIGECES.Models.EnrollmentStatus.Completed)
        {
            statusText = "Completado";
            badgeClass = "bg-success-lt";
        }
        else
        {
            statusText = "En progreso";
            badgeClass = "bg-warning-lt";
        }
    }
}

<div class="page-header d-print-none mb-3">
    <div class="row align-items-center">
        <div class="col">
            <div class="page-pretitle">
                Estudiante
            </div>
            <h2 class="page-title">
                @Model.Title
            </h2>
            <div class="text-muted small">
                Categoría: @Model.Category?.Name · Instructor: @Model.Instructor?.FullName
            </div>
        </div>
        <div class="col-auto ms-auto d-print-none">
            <a asp-action="MyCourses" class="btn btn-outline-secondary">
                <i class="ti ti-arrow-left me-1"></i>
                Volver al mis cursos
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-5 mb-3">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span class="badge @badgeClass">
                        @statusText
                    </span>
                    @if (isEnrolled)
                    {
                        <span class="text-muted small">
                            @percent% completado
                        </span>
                    }
                </div>

                <p>@Model.Description</p>

                @if (!isEnrolled)
                {
                    <form asp-action="Enroll"
                          method="post"
                          class="mt-3 js-enroll-form"
                          data-course-title="@Model.Title">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="courseId" value="@Model.Id" />
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="ti ti-login me-1"></i>
                            Inscribirme en este curso
                        </button>
                    </form>
                }


                @if (isEnrolled && total > 0)
                {
                    <hr />
                    <label class="form-label">Progreso del curso</label>
                    <div class="progress mb-1">
                        <div class="progress-bar bg-success"
                             role="progressbar"
                             style="width:@percent%"></div>
                    </div>
                    <div class="text-muted small">
                        @completed / @total lecciones completadas
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-7 mb-3">
        <div class="card h-100">
            <div class="card-header">
                <h3 class="card-title mb-0">
                    Lecciones
                </h3>
            </div>
            <div class="card-body">
                @if (Model.Lessons != null && Model.Lessons.Any())
                {
                    <ol class="list-unstyled mb-0">
                        @foreach (var lesson in Model.Lessons.OrderBy(l => l.Order))
                        {
                            bool isCompleted = completedLessonIds.Contains(lesson.Id);

                            <li class="mb-2">
                                <div class="card border-0 shadow-sm">
                                    <div class="card-body d-flex justify-content-between align-items-center">
                                        <div class="me-3">
                                            <div class="fw-bold">@lesson.Title</div>
                                            <div class="text-muted small">@lesson.Description</div>

                                            @if (!string.IsNullOrWhiteSpace(lesson.ResourceUrl))
                                            {
                                                <a href="@lesson.ResourceUrl"
                                                   target="_blank"
                                                   rel="noopener noreferrer"
                                                   class="small">
                                                    <i class="ti ti-external-link me-1"></i>
                                                    Ver recurso
                                                </a>
                                            }
                                        </div>

                                        <div class="text-end">
                                            @if (!isCompleted && isEnrolled)
                                            {
                                                <form asp-action="CompleteLesson" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="lessonId" value="@lesson.Id" />
                                                    <button class="btn btn-success btn-sm">
                                                        <i class="ti ti-check me-1"></i>
                                                        Marcar completada
                                                    </button>
                                                </form>
                                            }
                                            else if (isCompleted)
                                            {
                                                <span class="badge bg-success-lt">
                                                    Completada ✓
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary-lt">
                                                    Inscríbete para avanzar
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ol>
                }
                else
                {
                    <p class="text-muted mb-0">
                        Este curso aún no tiene lecciones configuradas.
                    </p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('.js-enroll-form').on('submit', function (e) {
                var title = $(this).data('course-title') || 'este curso';
                var ok = confirm('¿Seguro que quieres inscribirte en "' + title + '"?');

                if (!ok) {
                    e.preventDefault();
                }
            });
        });
    </script>
}
