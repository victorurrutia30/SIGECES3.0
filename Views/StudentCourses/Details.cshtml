@model SIGECES.Models.Course

@{
    ViewData["Title"] = "Detalle del curso";

    bool isEnrolled = ViewBag.IsEnrolled ?? false;
    SIGECES.Models.EnrollmentStatus? status = ViewBag.EnrollmentStatus;

    var completedLessonIds = ViewBag.CompletedLessonIds as List<int> ?? new List<int>();

    int total = Model.Lessons?.Count ?? 0;
    int completed = completedLessonIds.Count;
    int percent = total == 0 ? 0 : (completed * 100 / total);

    string statusText = "No inscrito";
    string statusClass = "bg-secondary";

    if (isEnrolled)
    {
        if (status == SIGECES.Models.EnrollmentStatus.Completed)
        {
            statusText = "Completado";
            statusClass = "bg-success";
        }
        else
        {
            statusText = "En progreso";
            statusClass = "bg-warning";
        }
    }
}

<h2>@Model.Title</h2>

<p>
    <strong>Categoría:</strong> @Model.Category?.Name <br />
    <strong>Instructor:</strong> @Model.Instructor?.FullName
</p>

<p>@Model.Description</p>

<p>
    <strong>Estado:</strong>
    @if (isEnrolled)
    {
        <span class="badge @statusClass">
            @statusText
        </span>
    }
    else
    {
        <span class="badge bg-secondary">No inscrito</span>
    }
</p>

@if (!isEnrolled)
{
    <form asp-action="Enroll" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="courseId" value="@Model.Id" />
        <button type="submit" class="btn btn-primary">Inscribirme en este curso</button>
    </form>
}

<hr />

<h3>Lecciones</h3>

<div class="mb-3">
    <label>Progreso del curso: @percent%</label>
    <div class="progress">
        <div class="progress-bar bg-success" role="progressbar"
             style="width:@percent%"></div>
    </div>
</div>

@if (Model.Lessons != null && Model.Lessons.Any())
{
    <ol>
        @foreach (var lesson in Model.Lessons.OrderBy(l => l.Order))
        {
            bool isCompleted = completedLessonIds.Contains(lesson.Id);

            <div class="border p-2 mb-2 d-flex justify-content-between align-items-center">
                <div>
                    <strong>@lesson.Title</strong><br />
                    <small>@lesson.Description</small><br />

                    @* 👉 Link al recurso de la lección, si existe *@
                    @if (!string.IsNullOrWhiteSpace(lesson.ResourceUrl))
                    {
                        <a href="@lesson.ResourceUrl"
                           target="_blank"
                           rel="noopener noreferrer">
                            Ver recurso
                        </a>
                    }
                </div>

                <div>
                    @if (!isCompleted)
                    {
                        <form asp-action="CompleteLesson" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="lessonId" value="@lesson.Id" />
                            <button class="btn btn-success btn-sm">Marcar como completada</button>
                        </form>
                    }
                    else
                    {
                        <span class="badge bg-success">Completada ✓</span>
                    }
                </div>
            </div>
        }
    </ol>
}
else
{
    <p>Este curso aún no tiene lecciones configuradas.</p>
}

<p>
    <a asp-action="Index" class="btn btn-secondary">Volver al catálogo</a>
</p>
