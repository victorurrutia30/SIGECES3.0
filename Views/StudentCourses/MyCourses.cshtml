@model IEnumerable<SIGECES.Models.Enrollment>

@{
    ViewData["Title"] = "Mis cursos";
}

<div class="page-header d-print-none mb-3">
    <div class="row align-items-center">
        <div class="col">
            <div class="page-pretitle">
                Estudiante
            </div>
            <h2 class="page-title">
                Mis cursos
            </h2>
        </div>
        <div class="col-auto ms-auto d-print-none">
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="ti ti-book me-1"></i>
                Ver catálogo
            </a>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="card">
        <div class="card-body text-center">
            <p class="text-muted mb-3">
                Aún no estás inscrito en ningún curso.
            </p>
            <a asp-action="Index" class="btn btn-primary">
                <i class="ti ti-book me-1"></i>
                Ver catálogo de cursos
            </a>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body p-0">
            <!-- Filtros superiores específicos de Mis cursos -->
            <div class="px-3 pt-3">
                <div class="row g-2 align-items-end">
                    <div class="col-md-6">
                        <label for="myCourses-title-filter" class="form-label small mb-1">
                            Filtrar por curso
                        </label>
                        <input type="text"
                               id="myCourses-title-filter"
                               class="form-control form-control-sm"
                               placeholder="Escribe parte del título del curso..." />
                    </div>

                    <div class="col-md-4">
                        <label for="myCourses-status-filter" class="form-label small mb-1">
                            Filtrar por estado / progreso
                        </label>
                        <select id="myCourses-status-filter"
                                class="form-select form-select-sm">
                            <option value="">Todos</option>
                            <option value="En progreso">En progreso</option>
                            <option value="Completado">Completado</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table card-table table-vcenter table-striped table-hover mb-0 js-datatable-my-courses">
                    <thead>
                        <tr>
                            <th>Curso</th>
                            <th>Categoría</th>
                            <th>Instructor</th>
                            <th>Fecha de inscripción</th>
                            <th>Estado</th>
                            <th class="w-1"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var enrollment in Model)
                        {
                            var course = enrollment.Course!;

                            <tr>
                                <td>@course.Title</td>
                                <td class="text-muted">@course.Category?.Name</td>
                                <td>@course.Instructor?.FullName</td>
                                <td>@enrollment.EnrolledAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    <span class="badge bg-primary-lt">
                                        @enrollment.Status.GetDisplayName()
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a asp-action="Details"
                                       asp-route-id="@course.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="ti ti-eye me-1"></i>
                                        Ver curso
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}


@section Scripts {
    <script>
        $(function () {
            // Inicializar DataTable usando la configuración global (datatable-defaults.js)
            var table = $('.js-datatable-my-courses').DataTable({
                // Solo deshabilitamos orden y búsqueda en la columna de acciones
                columnDefs: [
                    { orderable: false, searchable: false, targets: -1 }
                ]
            });

            // Filtro por título de curso (columna 0)
            $('#myCourses-title-filter').on('keyup change', function () {
                table
                    .column(0)              // Columna "Curso"
                    .search(this.value)
                    .draw();
            });

            // Filtro por estado / progreso (columna 4)
            $('#myCourses-status-filter').on('change', function () {
                var value = this.value;

                // Si está vacío, limpiamos el filtro de la columna
                table
                    .column(4)              // Columna "Estado"
                    .search(value)
                    .draw();
            });
        });
    </script>
}
