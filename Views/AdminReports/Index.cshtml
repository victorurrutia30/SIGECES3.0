@{
    ViewData["Title"] = "Reportes de administración";
}

<h2>@ViewData["Title"]</h2>

<p class="text-muted">
    Descarga reportes en formato CSV para analizarlos en Excel u otras herramientas.
</p>

<div class="row">
    <div class="col-md-4 mb-3">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Usuarios</h5>
                <p class="card-text">
                    Lista completa de usuarios con rol y estado (activo / inactivo).
                </p>
                <a asp-action="ExportUsersCsv" class="btn btn-outline-primary">
                    Descargar CSV de usuarios
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-3">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Cursos</h5>
                <p class="card-text">
                    Cursos con cantidad de inscripciones, completados y porcentaje de finalización.
                </p>
                <a asp-action="ExportCoursesCsv" class="btn btn-outline-primary">
                    Descargar CSV de cursos
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-3">
        <div class="card h-100">
            <div class="card-body">
                <h5 class="card-title">Inscripciones</h5>
                <p class="card-text">
                    Detalle por estudiante, curso, fecha y estado de la inscripción.
                </p>
                <a asp-action="ExportEnrollmentsCsv" class="btn btn-outline-primary">
                    Descargar CSV de inscripciones
                </a>
            </div>
        </div>
    </div>
</div>

<p>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
        Volver al inicio
    </a>
</p>
