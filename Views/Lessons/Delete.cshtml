@model SIGECES.Models.Lesson

@{
    ViewData["Title"] = "Eliminar lección";
}

<h2>Eliminar lección</h2>

<h4>¿Seguro que deseas eliminar esta lección?</h4>

<dl class="row">
    <dt class="col-sm-2">Curso</dt>
    <dd class="col-sm-10">@Model.Course?.Title</dd>

    <dt class="col-sm-2">Título</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Orden</dt>
    <dd class="col-sm-10">@Model.Order</dd>
</dl>

<form asp-action="Delete" method="post"
      data-confirm="¿Seguro que deseas eliminar esta lección? Esta acción no se puede deshacer.">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Manage" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Cancelar</a>
</form>
