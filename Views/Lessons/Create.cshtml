@model SIGECES.Models.Lesson

@{
    ViewData["Title"] = "Agregar lección";
    var courseTitle = ViewBag.CourseTitle as string ?? "Curso";
}

<div class="page-header d-print-none mb-3">
    <div class="row align-items-center">
        <div class="col">
            <div class="page-pretitle">
                Lecciones
            </div>
            <h2 class="page-title">
                Agregar lección a: @courseTitle
            </h2>
        </div>
        <div class="col-auto ms-auto d-print-none">
            <a asp-action="Manage"
               asp-route-courseId="@Model.CourseId"
               class="btn btn-outline-secondary">
                <i class="ti ti-arrow-left me-1"></i>
                Volver a lecciones
            </a>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="CourseId" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ResourceUrl" class="form-label">URL del recurso (opcional)</label>
                <input asp-for="ResourceUrl" class="form-control" />
                <span asp-validation-for="ResourceUrl" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Order" class="form-label">Orden</label>
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Manage"
                   asp-route-courseId="@Model.CourseId"
                   class="btn btn-outline-secondary">
                    Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="ti ti-device-floppy me-1"></i>
                    Guardar
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
