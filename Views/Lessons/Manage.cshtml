@model SIGECES.Models.Course

@{
    ViewData["Title"] = "Lecciones del curso";
}

<div class="page-header d-print-none mb-3">
    <div class="row align-items-center">
        <div class="col">
            <div class="page-pretitle">
                Lecciones
            </div>
            <h2 class="page-title">
                @Model.Title
            </h2>
            <div class="text-muted small">
                Categoría: @Model.Category?.Name · Instructor: @Model.Instructor?.FullName
            </div>
        </div>
        <div class="col-auto ms-auto d-print-none">
            <div class="btn-list">
                <a asp-controller="Courses"
                   asp-action="Index"
                   class="btn btn-outline-secondary">
                    <i class="ti ti-arrow-left me-1"></i>
                    Volver a cursos
                </a>
                <a asp-action="Create"
                   asp-route-courseId="@Model.Id"
                   class="btn btn-primary">
                    <i class="ti ti-plus me-1"></i>
                    Agregar lección
                </a>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title mb-0">Lecciones configuradas</h3>
    </div>
    <div class="card-body p-0">
        @if (Model.Lessons != null && Model.Lessons.Any())
        {
            <div class="table-responsive">
                <table class="table card-table table-vcenter table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Orden</th>
                            <th>Título</th>
                            <th>Recurso</th>
                            <th class="w-1"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var lesson in Model.Lessons.OrderBy(l => l.Order))
                        {
                            <tr>
                                <td>@lesson.Order</td>
                                <td>@lesson.Title</td>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(lesson.ResourceUrl))
                                    {
                                        <a href="@lesson.ResourceUrl"
                                           target="_blank"
                                           class="text-primary"
                                           rel="noopener noreferrer">
                                            <i class="ti ti-external-link me-1"></i>
                                            Ver recurso
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin recurso</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-list flex-nowrap">
                                        <a asp-action="Edit"
                                           asp-route-id="@lesson.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="ti ti-pencil me-1"></i>
                                            Editar
                                        </a>
                                        <a asp-action="Delete"
                                           asp-route-id="@lesson.Id"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="ti ti-trash me-1"></i>
                                            Eliminar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="p-4 text-center text-muted">
                Este curso aún no tiene lecciones configuradas.
            </div>
        }
    </div>
</div>
